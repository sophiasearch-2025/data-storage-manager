POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=newspress
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO

# PostgreSQL - Usuario Workers (read/write)
POSTGRES_WORKER_USER=newspress_worker
POSTGRES_WORKER_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO

# PostgreSQL - Usuario API Consultas (read-only)
POSTGRES_READONLY_USER=newspress_readonly
POSTGRES_READONLY_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
# NOTA: En producción, cambiar estas credenciales

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
# NOTA: Sin autenticación por simplicidad. En producción, habilitar xpack.security

# API Ingestion
API_INGESTION_PORT=8080

# Logging
LOG_LEVEL=INFO
# Opciones: DEBUG, INFO, WARN, ERROR

# Worker Metrics
WORKER_INDEXER_METRICS_PORT=8081
WORKER_SYNC_METRICS_PORT=8082
